<div class="m-sm-4">
    <div class="text-center">
        <img src="img/logos/logo.png" alt="Logo" class="img-fluid" width="232"/>
    </div>
    <br>
    <br>
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger alert-dismissible text-center" role="alert">
                <button type="button" class="btn-close" data-dismiss="alert"
                        aria-label="Close"></button>
                <div class="alert-message">
                    <strong> {{this}} </strong> Vui lòng nhập lại!
                </div>
            </div>
        {{/each}}
    {{/if}}
    <form method="POST">
        <div class="mb-3">
            <label class="form-label">Tên đăng nhập</label>
            <input class="form-control form-control-lg" type="username" name="username"
                   placeholder="Nhập username hoặc email*"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Mật khẩu</label>
            <input class="form-control form-control-lg" type="password" name="password"
                   placeholder="Nhập mật khẩu*"/>
            <small>
                <a href="/forget">Quên mật khẩu?</a>
            </small>
        </div>
        <div class="text-center mt-3">
            <button type="submit" class="btn btn-lg btn-primary">Đăng nhập</button>
        </div>
    </form>
</div>





