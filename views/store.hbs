
<a href="/store/addBook"><button class="btn btn-square btn-primary mb-5">Thêm mới</button></a>
<form name="itemPerPage" method="get" action="/store/?page={{currentPage}}&item={{resPerPage}}" class="form-inline">
    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Item per page</label>
    <input type="hidden" name="page" value="{{currentPage}}" />
    <select name="item" onchange="itemPerPage.submit()" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
        <option selected value="{{resPerPage}}">{{resPerPage}}</option>
        <option  value="{{itemOption2}}">{{itemOption2}}</option>
        <option  value="{{itemOption3}}">{{itemOption3}}</option>
    </select>

</form>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th style="width:15%;">Mã ISBN</th>
        <th style="width:25%">Tên sách</th>
        <th class="d-none d-md-table-cell" style="width:25%">Tác giả</th>
        <th style="width:25%">Nhà xuất bản</th>
        <th style="width: 7%">Thao tác</th>
    </tr>
    </thead>
    <tbody>
    {{#each book}}
    <tr>
        <td>{{isbn}}</td>
        <td>{{bookName}}</td>
        <td class="d-none d-md-table-cell">{{author}}</td>
        <td>{{publisher}}</td>
        <td class="table-action">
            <a href="/store/{{_id}}"><i  class="align-middle" data-feather="eye"></i></a>
            <a href="/store/{{_id}}/modify"><i class="align-middle" data-feather="edit-2"></i></a>
        </td>

    </tr>
    {{/each}}
    </tbody>

</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            {{#if IsHasPrev}}
            <a class="page-link" href="/store/?page={{previousPage}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
                {{/if}}
        </li>
        {{#if IsHasPrev}}
        <li class="page-item"><a class="page-link" href="/store/?page={{previousPage}}&item={{resPerPage}}">{{previousPage}}</a></li>
        {{/if}}
        <li class="page-item  active"><a class="page-link" href="/store/?page={{currentPage}}&item={{resPerPage}}">{{currentPage}}</a></li>

        {{#if IsHasNext}}
        <li class="page-item"><a class="page-link" href="/store/?page={{nextPage}}&item={{resPerPage}}">{{nextPage}}</a></li>
        {{/if}}
        <li class="page-item">
            {{#if IsHasNext}}
            <a class="page-link" href="/store/?page={{nextPage}}&item={{resPerPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
            {{/if}}
        </li>
    </ul>
</nav>






