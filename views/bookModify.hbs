<form id="formModify" name="modifyBook" onsubmit="return validateBook('modifyBook')" method="post"
      enctype="multipart/form-data">

    {{#book}}
        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Mã ISBN</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="isbn" value="{{isbn}}" placeholder="Nhập mã ISBN">
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Tên sách</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="bookName" value="{{bookName}}"
                       placeholder="Nhập tên sách">
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Tên tác giả</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="author" value="{{author}}" placeholder="Nhập tên tác giả">
            </div>
        </div>





        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Đơn giá</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" min="1" name="price" value="{{price}}" placeholder="Nhập giá sách">
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Số trang</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" min="1" name="totalPage" value="{{totalPage}}"
                       placeholder="Nhập số trang">
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Tên nhà xuất bản</label>
            <div class="col-sm-10">
                <select name="publisher" class="form-select" aria-label="Default select example">
                    {{#publisherList}}
                        <option {{checkId this._id ../publisherID}} value="{{_id}}">{{publisherName}}</option>
                    {{/publisherList}}
                </select>
            </div>
        </div>
        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Thể loại</label>
            <div class="col-sm-10">
                <select name="category" class="form-select" aria-label="Default select example">



                    {{#each catalogList}}
                        <option {{checkId this._id ../categoryID}} value="{{_id}}">{{catalogName}}</option>
                    {{/each}}
                </select>
                <!--
                <input type="text" class="form-control" name="category" value="{{category}}"
                       placeholder="Nhập thể loại">
                       -->
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Hình thức bìa</label>
            <div class="col-sm-10">
                <select name="coverForm" class="form-select" aria-label="Default select example">
                    {{#each coverList}}
                        <option {{checkId this._id ../coverForm}}  value="{{_id}}">{{coverName}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="mb-3 row ">
            {{#each bookImage as |item|}}
                <label class="col-form-label col-sm-2 text-sm-right">{{#if @index}}{{else}}Link hình ảnh{{/if}}</label>
                <div class="col-sm-10  mb-2">
                    <input type="text" class="form-control" name="bookImage{{@index}}" value="{{item}}" placeholder="Link hình"
                           readonly>
                    <input type="file" name="imageFile{{@index}}" class="form-control" accept="image/*">
                </div>
            {{/each}}
        </div>



        <div class="mb-3 row">
            <label class="col-form-label col-sm-2 text-sm-right">Mô tả</label>
            <div class="col-sm-10">
                <textarea class="form-control" placeholder="nhập mô tả" name="detail" rows="3">{{detail}}</textarea>
            </div>
        </div>


        <div class="mb-3 row d-flex float-right flex-row-reverse">
            <div class="col-sm-6 ml-sm-auto">
                <button form="formModify" formaction="/store/{{_id}}/modify/updateToDb" type="submit"
                        class="btn btn-primary">Lưu
                </button>
            </div>

            <div class="col-sm-6 ml-sm-auto">
                <button type="button" onclick="window.history.back()"  class="btn btn-danger">Hủy</button>

            </div>
        </div>
    {{/book}}
    <input type="hidden" name="page" value="{{page}}"/>
    <input type="hidden" name="item" value="{{item}}"/>
</form>

