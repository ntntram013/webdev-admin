<form name="itemPerPage" method="GET" action="/users/?page={{currentPage}}&item={{resPerPage}}" class="form-inline">
<div class="form-group">
    <div class="mb-3 row">
        <label class="col-form-label col-7 text-sm-right" for="inlineFormCustomSelectPref">Số hàng dữ liệu</label>
        <div class="col-5">
            <select name="item" onchange="itemPerPage.submit()" class="custom-select my-1 mr-sm-2"
                    id="inlineFormCustomSelectPref">
                <option selected value="{{resPerPage}}">{{resPerPage}}</option>
                <option value="{{itemOption2}}">{{itemOption2}}</option>
                <option value="{{itemOption3}}">{{itemOption3}}</option>
            </select>
        </div>
    </div>
</div>
</form>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th style="width:15%;">Tên đăng nhập</th>
        <th style="width:25%">Email</th>
        <th style="width:25%">Điện thoại</th>
        <th style="width:25%">Tình trạng</th>
        <th style="width: 7%">Thao tác</th>
    </tr>
    </thead>
    <tbody>
    {{#each user}}
        <tr>
            <td>{{username}}</td>
            <td>{{email}}</td>
            <td class="d-none d-md-table-cell">{{phone}}</td>
            <td>
                {{#if isActivated}}
                    <span class="text-success">Đã kích hoạt,</span>
                {{else}}
                    Chưa kích hoạt,
                {{/if}}
                {{#if isBlocked}}
                    <span class="text-danger">đã bị khoá.</span>
                {{else}}
                    không bị khoá.
                {{/if}}
            </td>
            <td><a href="/users/{{_id}}?page={{currentPage}}&item={{resPerPage}}"><i class="align-middle"
                                                                                     data-feather="edit-3"></i></a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item">
            {{#if IsHasPrev}}
                <a class="page-link" href="/users/?page={{previousPage}}&item={{resPerPage}}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                </a>
            {{/if}}
        </li>

        {{#if IsHasPrev}}
            <li class="page-item"><a class="page-link" href="/users/?page={{previousPage}}&item={{resPerPage}}
                ">{{previousPage}}</a></li>
        {{/if}}

        <li class="page-item  active"><a class="page-link" href="/users/?page={{currentPage}}&item={{resPerPage}}
            ">{{currentPage}}</a></li>

        {{#if IsHasNext}}
            <li class="page-item"><a class="page-link" href="/users/?page={{nextPage}}&item={{resPerPage}}
                ">{{nextPage}}</a></li>
        {{/if}}

        <li class="page-item">
            {{#if IsHasNext}}
                <a class="page-link" href="/users/?page={{nextPage}}&item={{resPerPage}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                </a>
            {{/if}}
        </li>
    </ul>
</nav>









