{{#user}}
    <div class="card">
        <div>
            <a href="/users/?page={{page}}&item={{item}}">
            <button class="btn btn-danger"><i class="fas fa-times"></i></button>
            </a>
        </div>

        <div class="card-header">
            <h5 class="card-title">Thông Tin Tài Khoản "<strong>{{username}}</strong>"</h5>
            <h6 class="card-subtitle text-muted">Thông tin chi tiết tài khoản của người dùng.</h6>
        </div>
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th class="col-form-label col-sm-2 text-sm-left">Loại</th>
                <th class="col-sm-10">Dữ liệu</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Tên</td>
                <td class="col-sm-10 text-info">{{name}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Tên đăng nhập</td>
                <td class="col-sm-10 text-info">{{username}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Email</td>
                <td class="col-sm-10 text-info">{{email}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Địa chỉ</td>
                <td class="col-sm-10 text-info">{{address}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Ngày sinh</td>
                <td class="col-sm-10 text-info">{{dob}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Giới tính</td>
                <td class="col-sm-10 text-info">{{gender}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Mô tả</td>
                <td class="col-sm-10 text-info">{{detail}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Điện thoại</td>
                <td class="col-sm-10 text-info">{{phone}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Link ảnh đại diện</td>
                <td class="col-sm-10 text-info">{{userImage}}</td>
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Xác thực</td>
                {{#if isActivated}}
                    <td class="col-sm-10 text-primary">Đã kích hoạt tài khoản</td>
                {{else}}
                    <td class="col-sm-10 text-warning">Chưa kích hoạt tài khoản</td>
                {{/if}}
            </tr>
            <tr>
                <td class="col-form-label col-sm-2 text-sm-left">Tình trạng</td>
                {{#if isBlocked}}
                    <td class="col-sm-10 text-danger">Đã bị khoá</td>
                {{else}}
                    <td class="col-sm-10 text-success">Có thể dùng</td>
                {{/if}}
            </tr>
            </tbody>
        </table>

        <br><br>

        <div class="mb-3 row d-flex flex-row">
            <div class="col-form-label col-sm-2 text-sm-right">Thao tác với tài khoản:</div>
            <div class="col-sm-10 d-inline-flex float-left">
                {{#if isBlocked}}
                    <div class="mr-1 ">
                        <a href="#unblock" data-toggle="modal">
                            <button type="button" class="btn btn-success">Mở khoá</button>
                        </a>
                    </div>
                {{else}}
                    <div class="mr-1 ">
                        <a href="#block" data-toggle="modal">
                            <button type="button" class="btn btn-warning">Khoá</button>
                        </a>
                    </div>
                {{/if}}

                <div class="mr-1 ">
                    <a href="#delete" data-toggle="modal">
                        <button type="button" class="btn btn-danger">Xoá</button>
                    </a>
                </div>
            </div>
        </div>

        <br><br>

    </div>


    <div class="modal" id="unblock" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cảnh Báo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc sẽ <span class="text-danger">mở khoá</span> tài khoản người dùng này?</p>
                </div>
                <div class="modal-footer">
                    <a href="/users/{{_id}}/unblock?page={{page}}&item={{item}}">
                        <button type="button" class="btn btn-primary">Đồng ý</button>
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal" id="block" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cảnh Báo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc sẽ <span class="text-danger">khoá</span> tài khoản người dùng này?</p>
                </div>
                <div class="modal-footer">
                    <a href="/users/{{_id}}/block?page={{page}}&item={{item}}">
                        <button type="button" class="btn btn-primary">Đồng ý</button>
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>



    <div class="modal" id="delete" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cảnh Báo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc sẽ <span class="text-danger">xoá</span> tài khoản người dùng này?</p>
                </div>
                <div class="modal-footer">
                    <a href="/users/{{_id}}/delete">
                        <button type="button" class="btn btn-primary">Đồng ý</button>
                    </a>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>



{{/user}}
